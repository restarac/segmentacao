<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>State</th>
        <th>Occupation</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.age %></td>
          <td><%= contact.state.initials %></td>
          <td><%= contact.occupation %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-default btn-sm" %></td>
          <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Contact', new_contact_path, {class: "btn btn-success"} %>
