<h1>Segmentation Clauses</h1>

<table>
  <thead>
    <tr>
      <th>Segmentation</th>
      <th>Comparison opration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @segmentation_clauses.each do |segmentation_clause| %>
      <tr>
        <td><%= segmentation_clause.segmentation.name %> </td>
        <td><%= "#{segmentation_clause.compare_field} #{segmentation_clause.segmentation_filter.name} #{segmentation_clause.compare_value}"%></td>
