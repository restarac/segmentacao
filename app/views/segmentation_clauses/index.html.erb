        <td><%= link_to 'Edit', edit_segmentation_clause_path(segmentation_clause) %></td>
        <td><%= link_to 'Destroy', segmentation_clause, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

