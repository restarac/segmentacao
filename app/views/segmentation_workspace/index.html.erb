<p id="notice"><%= notice %></p>

<h1>Segmentations for Contact</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Conditions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @segmentations.each do |segmentation| %>
      <tr>
        <td><%= segmentation.name %></td>
        <td><%= segmentation.conditions %></td>
        <td><%= link_to 'Run!', segmentation_workspace_run_path(segmentation) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

